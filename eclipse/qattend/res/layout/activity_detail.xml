<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/image"
            android:src="@drawable/placeholder_event"
            android:scaleType="centerCrop"
            android:contentDescription="placeholder"
            android:background="@color/gray_lighter"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="?android:textColorPrimaryInverse"
            android:layout_alignBottom="@id/image"
            android:background="@color/dark_overlay"
            android:padding="12dp"/>

        <LinearLayout
            android:layout_below="@id/image"
            android:orientation="vertical"
            android:divider="?android:dividerVertical"
            android:showDividers="middle|end"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Description goes here"/>

            <TextView
                android:id="@+id/time"
                android:drawableLeft="@drawable/ic_device_access_time"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="24 June 2013 at 02:00 pm"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/location"
                android:drawableLeft="@drawable/ic_location_place"
                android:drawablePadding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Thamrin Plaza, Medan"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="Public"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="5 Ticket Left"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
